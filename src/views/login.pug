doctype html
html
    head
        title Login
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous")
    body
        .container
            .row.justify-content-center
                .col-6.mt-4
                    h2.text-center Login
                    a(href="/") back
                    div.card.mt-4
                        form.card-body(method="POST" action="/admin/login")
                            .form-group
                                label(for="username-input") Username
                                input#username-input.form-control(type="text" placeholder="Username" name="username")
                            .form-group
                                label(for="password-input") Password
                                input#password-input.form-control(type="text" placeholder="Password" name="password")
                            .form-group
                                input.form-control.btn-primary(type="Submit" value="Login")
                            if error
                                .alert.alert-danger= error
