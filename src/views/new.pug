doctype html
html
    head
        title Add new car
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous")
    body
        .container
            | Hello, admin 
            a(href="/admin/logout") Logout
            .row.justify-content-center
                .col-6.mt-4
                    h2.text-center Add new car
                    a(href="/admin") back
                    div.card.mt-4
                        form.card-body(method="POST" action="/admin/new")
                            .form-group
                                label(for="make-input") Make
                                input#make-input.form-control(type="text" placeholder="Make" name="make")
                            .form-group
                                label(for="model-input") Model
                                input#model-input.form-control(type="text" placeholder="Model" name="model")
                            .form-group
                                label(for="year-input") Year
                                input#year-input.form-control(type="number" placeholder="Year" name="year")
                            .form-group
                                input.form-control.btn-primary(type="Submit" value="Add")
                            if error
                                .alert.alert-danger= error
                            if notice
                                .alert.alert-info= notice
